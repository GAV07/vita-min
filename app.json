{
  "name": "VitaMin",
  "description": "Heroku review apps from GitHub PRs",
  "env": {
    "DATABASE_URL": {
      "required": true
    },
    "RAILS_LOG_TO_STDOUT": {
      "required": true
    },
    "FORCE_SSL": {
      "required": true
    },
    "RAILS_SERVE_STATIC_FILES": {
      "required": true
    },
    "RAILS_MASTER_KEY": {
      "required": true
    },
  },
  "addons": [
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ]
}
